<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#FAFAFA">

    <TextView
        android:id="@+id/titleStatistiques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:text="Statistiques"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"

        android:background="@color/light_blue"
        android:layout_marginBottom="150dp"

        />



    <com.google.android.material.card.MaterialCardView

        android:id="@+id/students_card"
        android:layout_width="200dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#F8C274"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleStatistiques"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"

                        android:text="Nombre des etudiants :" />


                    <TextView
                        android:id="@+id/students_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingTop="10dp"
                        android:paddingEnd="25dp"
                        android:paddingStart="25dp"
                        android:textColor="#B36E00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="1" />

                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/student"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    />

            </LinearLayout>

            <!-- Footer with icon + text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_background_orange"
                android:gravity="center"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|top"
                    android:text="Afficher"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


        </LinearLayout>







        </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/teachers_card"
        android:layout_width="200dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#45DBFF"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/students_card"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"

                        android:text="Nombre des enseignants " />


                    <TextView
                        android:id="@+id/teachers_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingTop="10dp"
                        android:paddingEnd="25dp"
                        android:paddingStart="25dp"
                        android:textColor="#3E8EAD"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="2" />

                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/teacher"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    />

            </LinearLayout>

            <!-- Footer with icon + text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_background_blue"
                android:gravity="center"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|top"
                    android:text="Afficher"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


        </LinearLayout>







    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView

        android:id="@+id/courses_card"
        android:layout_width="200dp"
        android:layout_height="120dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#54FD66"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/teachers_card"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_weight="1" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"

                        android:text="Nombre des \ncours" />


                    <TextView
                        android:id="@+id/courses_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingTop="10dp"
                        android:paddingEnd="25dp"
                        android:paddingStart="25dp"
                        android:textColor="#3BAB44"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="3" />

                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/course"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    />

            </LinearLayout>

            <!-- Footer with icon + text -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_background_green"
                android:gravity="center"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom|top"
                    android:text="Afficher"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_right_black"
                    android:layout_marginStart="8dp" />
            </LinearLayout>


        </LinearLayout>







    </com.google.android.material.card.MaterialCardView>






</androidx.constraintlayout.widget.ConstraintLayout>